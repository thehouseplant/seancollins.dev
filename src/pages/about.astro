---
import BaseLayout from "@/layouts/BaseLayout.astro";

const timeline = [
    { year: "2022", event: "Started at Tyler Technologies" },
    {
        year: "2018",
        event: "Attained MS in Information Systems and Technology",
    },
    { year: "2009", event: "Started at esri" },
    { year: "2009", event: "Attained BS in Computer Information Systems" },
    { year: "2007", event: "Attained AS in Business Administration" },
];

const interests = [
    "Traveling and food",
    "Writing and photography",
    "Automotive performance",
];
---

<BaseLayout
    title="About | Sean Collins"
    description="Writer and creator based in Portland. I write about creativity, technology, and life."
>
    <div class="about-page">
        <section class="about-hero">
            <div class="about-image">
                <img
                    src="/placeholder.svg?height=600&width=500"
                    alt="Portrait"
                />
            </div>
            <div class="about-intro">
                <p class="about-greeting">About</p>
                <h1 class="about-title text-balance">
                    I'm a writer and creator who loves exploring ideas and
                    sharing what I learn.
                </h1>
                <div class="about-bio">
                    <p>
                        Hey there! I'm based in Portland, Oregon, where I spend
                        my days writing, reading, and figuring things out one
                        blog post at a time.
                    </p>
                    <p>
                        I started this site as a place to share my thoughts on
                        creativity, technology, and the random stuff that
                        catches my attention. I also dabble in photography when
                        the mood strikes.
                    </p>
                    <p>
                        I believe in learning in public, asking questions, and
                        not taking myself too seriously. Thanks for stopping
                        byâ€”I hope you find something here that resonates.
                    </p>
                </div>
            </div>
        </section>

        <section class="about-section">
            <div class="section-grid">
                <div class="section-label">
                    <h2>Timeline</h2>
                </div>
                <div class="section-content">
                    <ul class="timeline-list">
                        {
                            timeline.map((item) => (
                                <li class="timeline-item">
                                    <span class="timeline-year">
                                        {item.year}
                                    </span>
                                    <span class="timeline-event">
                                        {item.event}
                                    </span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </section>

        <section class="about-section">
            <div class="section-grid">
                <div class="section-label">
                    <h2>Interests</h2>
                </div>
                <div class="section-content">
                    <ul class="interests-list">
                        {
                            interests.map((item) => (
                                <li class="interests-item">{item}</li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </section>

        <section class="about-section">
            <div class="section-grid">
                <div class="section-label">
                    <h2>Connect</h2>
                </div>
                <div class="section-content">
                    <div class="social-links">
                        <a
                            href="https://www.instagram.com/thehouseplant"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="social-link"
                        >
                            Instagram
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="14"
                                height="14"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M7 7h10v10"></path>
                                <path d="M7 17 17 7"></path>
                            </svg>
                        </a>
                        <a
                            href="https://x.com/__seancollins"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="social-link"
                        >
                            X / Twitter
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="14"
                                height="14"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M7 7h10v10"></path>
                                <path d="M7 17 17 7"></path>
                            </svg>
                        </a>
                        <a
                            href="https://github.com/thehouseplant"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="social-link"
                        >
                            GitHub
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="14"
                                height="14"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M7 7h10v10"></path>
                                <path d="M7 17 17 7"></path>
                            </svg>
                        </a>
                        <a
                            href="https://www.linkedin.com/in/theseancollins/"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="social-link"
                        >
                            LinkedIn
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                width="14"
                                height="14"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                            >
                                <path d="M7 7h10v10"></path>
