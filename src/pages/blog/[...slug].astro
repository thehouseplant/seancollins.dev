---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
    const posts = await getCollection("blog", ({ data }) => !data.draft);
    return posts.map((post) => ({
        params: { slug: post.id },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await render(post);

function formatDate(date) {
    return date.toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
    });
}
---

<BaseLayout
    title={`${post.data.title} | Sean Collins`}
    description={post.data.description}
    image={post.data.heroImage}
>
    <article class="blog-post">
        <header class="post-header">
            <time class="post-date">{formatDate(post.data.pubDate)}</time>
            <h1 class="post-title text-balance">{post.data.title}</h1>
            <p class="post-description">{post.data.description}</p>
            {
                post.data.tags.length > 0 && (
                    <div class="post-tags">
                        {post.data.tags.map((tag) => (
                            <span class="tag">{tag}</span>
                        ))}
                    </div>
                )
            }
        </header>

        {
            post.data.heroImage && (
                <div class="post-hero">
                    <img
                        src={post.data.heroImage || "/placeholder.svg"}
                        alt=""
                    />
                </div>
            )
        }

        <div class="post-content prose">
            <Content />
        </div>

        <footer class="post-footer">
            <a href="/blog" class="back-link">&larr; Back to all posts</a>
        </footer>
    </article>
</BaseLayout>

<style>
    .blog-post {
        max-width: 720px;
        margin: 0 auto;
        padding: 4rem 1.5rem 6rem;
    }

    .post-header {
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--border);
    }

    .post-date {
        display: block;
        font-size: 0.75rem;
        color: var(--muted);
        letter-spacing: 0.1em;
        text-transform: uppercase;
        margin-bottom: 1rem;
    }

    .post-title {
        font-family: var(--font-serif);
        font-size: clamp(1.75rem, 5vw, 2.5rem);
        font-weight: 400;
        line-height: 1.2;
        margin-bottom: 1rem;
    }

    .post-description {
        font-size: 1.125rem;
        color: var(--muted);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .post-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag {
        font-size: 0.75rem;
        color: var(--muted);
        background-color: var(--border);
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
    }

    .post-hero {
        margin-bottom: 3rem;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .post-hero img {
        width: 100%;
        aspect-ratio: 2/1;
        object-fit: cover;
    }

    .post-content {
        margin-bottom: 4rem;
    }

    /* Prose styles for markdown content */
    .prose {
        line-height: 1.75;
    }

    /* Add h1 serif font styling for markdown content */
    .prose :global(h1) {
        font-family: var(--font-serif);
        font-size: 2rem;
        font-weight: 400;
        margin-top: 3rem;
        margin-bottom: 1.25rem;
    }

    .prose :global(h2) {
        font-family: var(--font-serif);
        font-size: 1.5rem;
        font-weight: 400;
        margin-top: 3rem;
        margin-bottom: 1rem;
    }

    .prose :global(h3) {
        font-family: var(--font-serif);
        font-size: 1.25rem;
        font-weight: 400;
        margin-top: 2rem;
        margin-bottom: 0.75rem;
    }

    .prose :global(p) {
        margin-bottom: 1.5rem;
        color: var(--foreground);
    }

    .prose :global(ul),
    .prose :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .prose :global(li) {
        margin-bottom: 0.5rem;
    }

    .prose :global(strong) {
        font-weight: 600;
    }

    .prose :global(em) {
        font-style: italic;
    }

    .prose :global(blockquote) {
        border-left: 2px solid var(--border);
        padding-left: 1.5rem;
        margin: 2rem 0;
        font-style: italic;
        color: var(--muted);
    }

    .prose :global(code) {
        font-family: var(--font-mono, monospace);
        font-size: 0.875em;
        background-color: var(--border);
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
    }

    .prose :global(pre) {
        background-color: var(--card);
        border: 1px solid var(--border);
        border-radius: 0.5rem;
        padding: 1rem;
        overflow-x: auto;
        margin-bottom: 1.5rem;
    }

    .prose :global(pre code) {
        background: none;
        padding: 0;
    }

    .prose :global(a) {
        text-decoration: underline;
        text-underline-offset: 3px;
        transition: opacity 0.2s ease;
    }

    .prose :global(a:hover) {
        opacity: 0.7;
    }

    .prose :global(hr) {
        border: none;
        border-top: 1px solid var(--border);
        margin: 3rem 0;
    }

    .post-footer {
        padding-top: 2rem;
        border-top: 1px solid var(--border);
    }

    .back-link {
        font-size: 0.875rem;
        color: var(--muted);
        transition: color 0.2s ease;
    }

    .back-link:hover {
        color: var(--foreground);
    }
</style>
