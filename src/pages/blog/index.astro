---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function formatDate(date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title="Blog | Your Name" description="Thoughts on photography, creativity, and the art of seeing.">
  <div class="blog-page">
    <header class="page-header">
      <h1 class="page-title">Blog</h1>
      <p class="page-description">
        Thoughts on photography, creativity, and the art of seeing.
      </p>
    </header>

    <div class="posts-list">
      {sortedPosts.map((post, index) => (
        <article class="post-item">
          <a href={`/blog/${post.id}`} class="post-link">
            {post.data.heroImage && (
              <div class="post-image">
                <img src={post.data.heroImage || "/placeholder.svg"} alt="" loading="lazy" />
              </div>
            )}
            <div class="post-content">
              <!-- Added post index number -->
              <span class="post-index">{String(index + 1).padStart(2, '0')}</span>
              <time class="post-date">{formatDate(post.data.pubDate)}</time>
              <h2 class="post-title">{post.data.title}</h2>
              <p class="post-excerpt">{post.data.description}</p>
              {post.data.tags.length > 0 && (
                <div class="post-tags">
                  {post.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .blog-page {
    max-width: 900px;
    margin: 0 auto;
    padding: 4rem 1.5rem 6rem;
  }

  .page-header {
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .page-title {
    font-family: var(--font-serif);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.125rem;
    color: var(--muted);
    max-width: 500px;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .post-item {
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border);
  }

  .post-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .post-link {
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .post-link {
      grid-template-columns: 280px 1fr;
      gap: 2rem;
    }
  }

  .post-image {
    aspect-ratio: 16/10;
    overflow: hidden;
    border-radius: 0.75rem;
    background-color: var(--surface);
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  /* Styled post index */
  .post-index {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    margin-bottom: 0.5rem;
    font-variant-numeric: tabular-nums;
  }

  .post-date {
    display: block;
    font-size: 0.75rem;
    color: var(--muted);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 0.75rem;
  }

  .post-title {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 400;
    line-height: 1.3;
    margin-bottom: 0.75rem;
    transition: color 0.2s ease;
  }

  .post-link:hover .post-title {
    /* Use accent color on hover */
    color: var(--accent);
  }

  .post-excerpt {
    font-size: 0.9375rem;
    color: var(--muted);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--accent);
    /* Accent muted background for tags */
    background-color: var(--accent-muted);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
  }
</style>
